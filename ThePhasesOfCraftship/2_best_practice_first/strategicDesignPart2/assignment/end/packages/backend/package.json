{
  "name": "@dddforum/backend",
  "version": "1.0.0",
  "description": "The backend for dddforum",
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./build && tsc -b tsconfig.json ",
    "generate": "prisma generate",
    "migrate": "prisma migrate dev",
    "db:seed": "prisma db seed",
    "db:reset": "rimraf ./dev.db && npm run migrate && npm run generate",
    "start:dev": "npm run migrate && npm run generate && npx nodemon",
    "start:dev:no-watch": "npm run migrate && npm run generate && ts-node prepareEnv.ts ts-node src/index.ts",
    "start": "npm run build && npm run db:seed && node build/index.js",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "test:e2e": "jest -c jest.config.e2e.ts",
    "test:e2e:dev": "jest -c jest.config.e2e.ts --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run prettier-format && npm run lint"
    }
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "nodemon": "^2.0.19"
  },
  "dependencies": {
    "@prisma/client": "^4.16.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "prisma": "^4.16.0"
  }
}
