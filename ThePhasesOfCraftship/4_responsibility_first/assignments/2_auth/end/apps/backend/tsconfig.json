{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "types": ["node", "jest", "express"],
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "build"
  ]
}
  